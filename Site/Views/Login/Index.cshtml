
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/login.css">

    <title>Login</title>
</head>

<body style='background-color: #771ED2'>
    <br><br><br><br><br><br>
    <div class="container" style='display: flex;  align-items: center; justify-content: center;'>
        <div class="card"
             style='width:400px; height: 430px; margin-top: -40px; display: flex;  align-items: center; justify-content: center;'>

            <div class="card-body">
                <a asp-controller="Home" asp-action="Index"> <img src="~/img/logo1.png" width="200" height="auto" alt="Sua melhor loja"></a>
                <br><br>
                <h5>
                    <center><b> Olá, Bem Vindo ! </b></center>
                </h5>
                <form name="login" asp-controller="Login" asp-action="Login" method="post">
                    <div class="form-group">
                        <label for="Email">E-mail: </label>
                        <input type="email" class="form-control" id="Email" name="email" placeholder="Insira seu e-mail">
                    </div>
                    <div class="form-group">
                        <label for="Senha">Senha: </label>
                        <input type="password" class="form-control" id="Senha" name="senha" placeholder="Insira sua senha">
                        <small id="esqsenha" class="form-text text-right text-muted text-primary">Esqueci minha senha</small>
                    </div>
                    <div class="form-group form-check">
                    </div>
                    <button type="submit" class="btn btn-warning btn-block"><b>Continuar</b></button>
                    <br>
                    <a asp-controller="Login" asp-action="cadUsuario"> <small id="noconta" class="form-text text-center text-muted text-primary">Não tem conta? Cadastre-se</small></a>
                </form>
            </div>
        </div>
    </div>
    </div>

    <script src="~/js/jquery-3.4.1.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/boostrap/js/bootstrap.min.js"></script>
</body>

</html>
