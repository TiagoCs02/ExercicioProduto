<!doctype html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/boostrap/css/bootstrap.min.css">
    <!--Icon-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Archivo+Narrow&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif&display=swap" rel="stylesheet">
    <!--Necessário-->
    <link rel="stylesheet" href="~/css/comum.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-orange">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" width="100" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <div class="input-group input-group-sm mb-3" style="font-size: 12px">
                            <input type="search" class="form-control" placeholder="Pesquisar">
                            <div class="input-group-prepend">
                                <button class="btn btn-outline-light" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Compra" asp-action="Carrinho" tabindex="-1">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                            Carrinho
                        </a>
                    </li>
                    <li class="nav-item">
                        @{
                            if (ViewBag.Nome != null && ViewBag.Login == 1)
                            {
                                <a class="nav-link" asp-controller="Login" asp-action="Logout" tabindex="-1">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    @ViewBag.Nome
                                </a>
                            }
                            else
                            {
                                <a class="nav-link" asp-controller="Login" asp-action="Index" tabindex="-1">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    Login
                                </a>
                            }
                        }

                    </li>
                </ul>
            </div>
        </nav>

        <nav class="navbar navbar-light bg-silver">
            <a class="nav-link-submenu" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i> Home
            </a>
            <a class="nav-link-submenu" href="#">
                <i class="fas fa-guitar"></i> Categorias
            </a>
            <a class="nav-link-submenu" href="#">
                <i class="fas fa-mobile"></i> Brasil Vinil App
            </a>
            <a class="nav-link-submenu" asp-controller="Produto" asp-action="Produtos">
                <i class="fas fa-record-vinyl"></i> Produtos
            </a>
            @{
                if (ViewBag.Login == 1)
                {
                    <a class="nav-link-submenu" asp-controller="Pedido" asp-action="MeusPedidos">
                        <i class="fa fa-truck" aria-hidden="true"></i> Meus Pedidos
                    </a>
                }
            }
            <a class="nav-link-submenu" href="#">
                <i class="fa fa-phone-square" aria-hidden="true"></i> Contatos
            </a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer">
            <div class="row justify-content-center">
                <div class="col-5">&copy; Alunos 4º ADS - FAPEN</div>
                <div class="col-3"><a href="#">Sobre nós</a></div>
                <div class="col-3">
                    <a href="#">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                        Contato
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/4fc6104bc0.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="~/boostrap/js/bootstrap.min.js"></script>
</body>
</html>