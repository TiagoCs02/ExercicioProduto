@model IEnumerable<API.Models.Cadastroproduto>
@{
    Layout = "_Site";
    ViewData["Title"] = "Home";
}

<!doctype html>
<html lang="pt-br">
<head>
    <link rel="stylesheet" href="~/css/home.css">
    <title>Brasil Vinil - Home</title>
</head>
<body>
    <div class="container">
        <!--Inicio do Carrosel-->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <!--Colocar imagem da mesma resolução-->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 h-100" src="./img/banner1.png" alt="Primeiro Banner">
                </div>
                <div class="carousel-item ">
                    <img class="d-block w-100 h-100" src="./img/banner1.png" alt="Segundo Banner">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 h-100" src="./img/banner1.png" alt="Terceiro Banner">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <br>
        <!--Destaques por Categorias-->

        <div class="row row-cols-1 row-cols-md-2">
            <div class="col mb-4">
                <div class="card">
                    <img src="./img/cateRock.jpg" class="card-img-top" height="200" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><b>ROCK</b></h5>
                        <p class="card-text">Encontrei aqui seus melhores discos de Rock</p>
                    </div>
                </div>
            </div>
            <div class="col mb-4">
                <div class="card">
                    <img src="./img/catPop.jpg" class="card-img-top" height="200" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><b>POP</b></h5>
                        <p class="card-text">Pop sempre com você</p>
                    </div>
                </div>
            </div>
            <div class="col mb-4">
                <div class="card">
                    <img src="./img/catPop.jpg" class="card-img-top" height="200" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><b>MPB</b></h5>
                        <p class="card-text">Encontrei aqui seus melhores discos de MPB</p>
                    </div>
                </div>
            </div>
            <div class="col mb-4">
                <div class="card">
                    <img src="~/img/cateRock.jpg" class="card-img-top" height="200" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><b>SAMBA</b></h5>
                        <p class="card-text">Encontrei aqui seus melhores discos de SAMBA</p>
                    </div>
                </div>
            </div>
        </div>
        <h1 class="text-center" id="titulo"><b>Os Mais Vendidos</b></h1>
        <!--Destaques discos-->
        <div class="row">
            @{ foreach (API.Models.Cadastroproduto prod in Model)
                {
                    <div class="col-md-6 col-lg-3 col-xs-12 div_produto ">
                        <a asp-controller="Produto" asp-action="Descricao" asp-route-id="@prod.Idproduto" style="color: black;">
                            <h4 class="text-center" style="color: #771ED2; ">@prod.Nome</h4>
                            <img src="~/img/destaque3.jpg" class="rounded mx-auto d-block" width="250" alt="...">
                            <div class="div_produto1">
                                <h4 class="text-center" style="color: #ff6914;">R$@prod.Valor</h4>
                                <b>@prod.Artista</b>
                                <label>Descrição do Produto</label>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</body>
</html>
